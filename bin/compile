#!/bin/sh

set -e

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo "-----> Vendoring cloud-sql-proxy into slug"
if [ ! -d $BUILD_DIR/google/bin ]; then
  mkdir -p $BUILD_DIR/google/bin
fi

wget https://storage.googleapis.com/cloud-sql-connectors/cloud-sql-proxy/v2.7.1/cloud-sql-proxy.linux.amd64 -O $BUILD_DIR/google/bin/cloud-sql-proxy
chmod +x $BUILD_DIR/google/bin/cloud-sql-proxy

VERSION=`$BUILD_DIR/google/bin/cloud-sql-proxy --version`
echo "       Using version: $VERSION"

if [ ! -d $BUILD_DIR/bin ]; then
  mkdir -p $BUILD_DIR/bin
fi

if [ ! -f $BUILD_DIR/google/credentials.json ]; then
  touch $BUILD_DIR/google/credentials.json
fi

cat >$BUILD_DIR/bin/run-cloud-sql-proxy <<EOF
#!/bin/sh
echo '$(cat $ENV_DIR/CSQL_PROXY_CREDENTIALS)' > /app/google/credentials.json

for env_var in $(ls $ENV_DIR); do
  echo "[run-cloud-sql-proxy] Env var: $env_var"
  echo "$env_var" | grep -E "CSQL_PROXY_.*" && echo "[run-cloud-sql-proxy] Env var hit! $env_var" &&
  export "$env_var=$(cat $ENV_DIR/$env_var)"
  :
done

echo "[run-cloud-sql-proxy] Using version: $(/app/google/bin/cloud-sql-proxy --version)"

exec /app/google/bin/cloud-sql-proxy -c /app/google/credentials.json &
EOF
chmod +x $BUILD_DIR/bin/run-cloud-sql-proxy

exit 0
